@mixin tablets() {
    @media screen and (min-width: $bp-tablets) {
        @content ;
    }
}

@mixin laptop() {
    @media screen and (min-width: $bp-laptop) {
        @content ;
    }
}

@mixin desktop() {
    @media screen and (min-width: $bp-desktop) {
        @content ;
    }
}

@mixin desktop-only() {
    @media screen and (max-width: $bp-desktop) {
        @content ;
    }
}

@mixin desktopHd() {
    @media screen and (min-width: $bp-desktop-hd) {
        @content ;
    }
}
